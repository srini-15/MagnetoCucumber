<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- Report Name -->
        <reportName>My Test Automation Report</reportName>

        <!-- Document Title (displayed in the browser tab) -->
        <documentTitle>Test Automation Report</documentTitle>

        <!-- Report Theme (standard or dark) -->
        <theme>standard</theme>
        
        <!-- Automatically generate logs for failed tests -->
        <autoCreateRelativePathMedia>true</autoCreateRelativePathMedia>

        <!-- Display test timeline in the report -->
        <timelineEnabled>true</timelineEnabled>

        <!-- Specify System Information (optional) -->
        <systemInfo>
            <param>Environment</param>
            <value>QA</value>
        </systemInfo>
        <systemInfo>
            <param>Browser</param>
            <value>Chrome</value>
        </systemInfo>
        <!-- Add more systemInfo parameters as needed -->

